<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    android:padding="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarStyle" />




    <android.support.v7.widget.CardView
        android:id="@+id/cardReportFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/textHeaderName"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="0dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="8dp"
                    android:src="@drawable/image_logo_ttcih" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:src="@drawable/image_logo_unfpa" />
            </LinearLayout>

            <TextView
                android:id="@id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textHeaderName"
                android:gravity="center_horizontal"
                android:text="Tanzania Traning Center for International Health"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/report_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="#38A7C8"
                android:text="Report Title :- List ya mama wajawazito"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/facility_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/report_title"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Facility Name :- Mt meru hospital"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/textHeaderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/facility_title"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:padding="0dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/starting_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_below="@+id/facility_title"
                    android:layout_marginLeft="8dp"
                    android:textColor="#F7941D"
                    android:text="Starting follow_up_date :- 8th Jan 2017"
                    android:textSize="18sp" />

                <TextView
                    android:gravity="right"
                    android:textColor="#F7941D"
                    android:id="@+id/ending_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/facility_title"
                    android:layout_marginRight="8dp"
                    android:text="Ending follow_up_date :- 22nd Oct 2017"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardReportDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp">
        <TableLayout   android:id = "@+id/tablelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:padding="8dp">

            <TableRow
                android:background="@drawable/cell_shape_header"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0.1"
                    android:padding="4dp"
                    android:id="@+id/sn"
                    android:text="SN#"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="4dp"
                    android:layout_weight="0.1"
                    android:id="@+id/mothers_name"
                    android:background="@drawable/cell_shape_header"
                    android:text="Jina La mama"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="4dp"
                    android:layout_weight="0.1"
                    android:id="@+id/vllage"
                    android:text="Village"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_weight="0.1"
                    android:padding="4dp"
                    android:id="@+id/age"
                    android:text="Age"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_weight="0.1"
                    android:padding="4dp"
                    android:id="@+id/risk"
                    android:text="Risk referral_status"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_weight="0.1"
                    android:padding="4dp"
                    android:id="@+id/place_of_birth"
                    android:text="PlaceOfBirth"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_weight="0.1"
                    android:padding="4dp"
                    android:id="@+id/delivery_type"
                    android:text="DeliveryType"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_weight="0.1"
                    android:padding="4dp"
                    android:id="@+id/child_status"
                    android:text="ChildStatus"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />


                <TextView
                    android:layout_weight="0.1"
                    android:padding="4dp"
                    android:id="@+id/edd"
                    android:text="DateOfBirth"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
            </TableRow>

        </TableLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>

