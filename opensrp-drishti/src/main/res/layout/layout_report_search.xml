        <LinearLayout
            android:id="@+id/layoutRiskStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Kuhusu vidokezo vya hatari"
                android:textAllCaps="false"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioGroupRiskStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="0dp">

                <RadioButton
                    android:id="@+id/radioAllRiskStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Wote"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioYesOnRisk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Walio hatarini"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioNotOnRisk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Walio salama"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutDeliveryStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Kuhusu matokeo ya kujifungua"
                android:textAllCaps="false"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioGroupDeliveryResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="0dp">

                <RadioButton
                    android:id="@+id/radioAllDeliveryResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Wote"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioSuccessfulDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Waliojifungua salama"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioUnsuccessfulDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Hawakujifungua salama"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:text="Tarehe ya kuanzia na kuishia"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:padding="2dp"
            android:text="NB: Hii sio lazima. Usipochagua tarehe utapewa ripoti kuanzia mwanzo hadi mwisho wa rekodi zote bila kuangalia tarehe ya rekodi hiyo."
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/layoutDatePick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cardPickStartDate"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"

                app:cardBackgroundColor="@color/selector_white_primary_light"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/ic_calendar_today"
                        android:tint="@color/primary" />

                    <TextView
                        android:id="@+id/textStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="16dp"
                        android:hint="Kuanzia"
                        android:textColor="@color/secondary_text"
                        android:textColorHint="@color/hint_text"
                        android:textSize="14sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/ic_more"
                android:tint="?attr/colorAccent" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardPickEndDate"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"

                app:cardBackgroundColor="@color/selector_white_primary_light"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/ic_calendar_today"
                        android:tint="@color/primary" />

                    <TextView
                        android:id="@+id/textEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="16dp"
                        android:hint="Kuishia"
                        android:textColor="@color/secondary_text"
                        android:textColorHint="@color/hint_text"
                        android:textSize="14sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:clickable="false"
            android:visibility="invisible" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>