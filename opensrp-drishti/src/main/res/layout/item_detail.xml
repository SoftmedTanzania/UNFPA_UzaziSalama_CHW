<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/clint_adair"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="#398FE5" />


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="64dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <ImageView
                android:id="@+id/icon"
                android:layout_marginTop="36dp"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_account_circle_black_48dp"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mwanaidi Juma"
                android:layout_below="@id/icon"
                android:textSize="48sp"
                android:textColor="#398FE5"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:id="@+id/other_details"
                android:layout_below="@id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="36sp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:text="28 Years"/>
                <View
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="1dp"
                    android:layout_height="36dp"
                    android:background="#000"/>
                <TextView
                    android:textSize="36sp"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Female"/>
            </LinearLayout>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_below="@id/other_details"
                android:id="@+id/demographic_details"
                android:layout_width="500dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                card_view:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="#EEEEEE"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginLeft="16dp"
                            android:drawableLeft="@drawable/ic_calendar_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:layout_marginTop="16dp"
                            android:textColor="#000"
                            android:text="Residence"/>
                        <TextView
                            android:layout_marginLeft="16dp"
                            android:drawableLeft="@drawable/ic_calendar_check"
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="24sp"
                            android:text="Contacts"/>
                        <TextView
                            android:layout_marginLeft="16dp"
                            android:drawableLeft="@drawable/ic_calendar_check"
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="24sp"
                            android:layout_marginBottom="16dp"
                            android:text="Sponsors"/>
                    </LinearLayout>

                    <LinearLayout
                        android:background="#fff"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="32dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="@color/client_list_header_text_color"
                            android:text="Residence"/>
                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="32dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="@color/client_list_header_text_color"
                            android:text="Contacts"/>
                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="32dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="@color/client_list_header_text_color"
                            android:text="Sponsors"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_below="@id/demographic_details"
                android:id="@+id/visits_details"
                android:layout_width="500dp"
                android:layout_marginTop="32dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="#EEEEEE"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginLeft="16dp"
                            android:drawableLeft="@drawable/ic_calendar_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:layout_marginTop="16dp"
                            android:textColor="#000"
                            android:text="Referred"/>
                        <TextView
                            android:layout_marginLeft="16dp"
                            android:drawableLeft="@drawable/ic_calendar_check"
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="24sp"
                            android:text="Visits"/>
                        <TextView
                            android:layout_marginLeft="16dp"
                            android:drawableLeft="@drawable/ic_calendar_check"
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="24sp"
                            android:layout_marginBottom="16dp"
                            android:text="Reason"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="#fff"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="32dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="@color/client_list_header_text_color"
                            android:text="Residence"/>
                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="32dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="@color/client_list_header_text_color"
                            android:text="Contacts"/>
                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="32dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="@color/client_list_header_text_color"
                            android:text="Sponsors"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_below="@id/visits_details"
                android:layout_width="500dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="#EEEEEE"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginLeft="16dp"
                            android:drawableLeft="@drawable/ic_calendar_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:layout_marginTop="16dp"
                            android:textColor="#000"
                            android:text="Date"/>
                        <TextView
                            android:layout_marginLeft="16dp"
                            android:drawableLeft="@drawable/ic_calendar_check"
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="24sp"
                            android:text="CH ID"/>
                        <TextView
                            android:layout_marginLeft="16dp"
                            android:drawableLeft="@drawable/ic_calendar_check"
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="24sp"
                            android:layout_marginBottom="16dp"
                            android:text="Note"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="#fff"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="32dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="@color/client_list_header_text_color"
                            android:text="Residence"/>
                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="32dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="@color/client_list_header_text_color"
                            android:text="Contacts"/>
                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="32dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="@color/client_list_header_text_color"
                            android:text="Sponsors"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>


