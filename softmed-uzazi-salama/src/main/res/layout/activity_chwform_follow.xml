<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e5e5e5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include  layout="@layout/ancdetail_nav_bar" />

        <android.support.v7.widget.CardView
            android:id="@+id/demographics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Tarifa za mama mjamzito kwenye mahudhurio"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iconCalendar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/title_one"
                android:layout_margin="8dp"
                android:padding="1dp"
                android:src="@drawable/ic_calendar_today"
                android:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_one"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_toRightOf="@+id/iconCalendar"
                android:text="dd mmm yyyy"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iconPhone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/title_one"
                android:layout_marginLeft="80dp"
                android:layout_toStartOf="@+id/textPhone"
                android:padding="1dp"
                android:src="@drawable/ic_cellphone_android"
                android:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/textPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textDate"
                android:layout_alignBottom="@+id/textDate"
                android:layout_alignEnd="@+id/editTextMotherName"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:hint="Namba ya simu"
                android:textColor="@color/secondary_text"
                android:textColorHint="@color/hint_text" />

            <EditText
                android:id="@+id/editTextClinicName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/iconCalendar"
                android:layout_margin="6dp"
                android:hint="Jina la kliniki la Rufaa"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/secondary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/accountIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignStart="@+id/editTextMotherAge"
                android:layout_alignTop="@+id/editTextMotherAge"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="6dp"
                android:alpha="0.5"
                android:src="@drawable/ic_account_circle" />

            <EditText
                android:id="@+id/editTextMotherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editTextClinicName"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@+id/editTextMotherId"
                android:hint="Andika Jina la Mama"
                android:imeOptions="actionDone"
                android:inputType="textPersonName|textFilter|textCapWords"
                android:minWidth="40dp"
                android:paddingLeft="22dp"
                android:paddingRight="10dp"
                android:textColor="@color/secondary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="8sp" />

            <EditText
                android:id="@+id/editTextMotherId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editTextPartnerName"
                android:layout_below="@+id/editTextClinicName"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="23dp"
                android:hint="No. ya Utambulisho"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextMotherAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="6dp"
                android:hint="Umri wa Mama"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="12sp"
                android:layout_alignBaseline="@+id/editTextMotherId"
                android:layout_alignBottom="@+id/editTextMotherId"
                android:layout_toEndOf="@+id/editTextClinicName" />

            <EditText
                android:id="@+id/editTextPartnerName"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextMotherId"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="20dp"
                android:hint="Jina la Mume/Mwenzi"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/title_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextPartnerName"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="14dp"
                android:text="Mahali anapoishi"
                android:textAllCaps="true"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextWilaya"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_two"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="12dp"
                android:hint="Wilaya"
                android:inputType="text"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextKata"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextWilaya"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="6dp"
                android:hint="Kata"
                android:inputType="number"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextKijiji"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextKata"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="6dp"
                android:hint="Kijiji"
                android:inputType="number"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
